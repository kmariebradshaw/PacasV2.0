<main id="register" class="customer">	  
  {% if customer %}
    <script type="text/javascript">
      window.location = '/account/'; 
   </script>
  {% else %}
    <section class="tac fw page-header">
      <h2 class="text-green nmb">Create an Account</h2>
      <h3 class="nmt"> Already have an account? <a href="/account/login" class="text-green">login here</a></h3>
    </section>    
    <section>
      {% form 'create_customer' %}
        {{ form.errors | default_errors }}
      <h3 class="text-green"><label for="first_name ">First Name</label></h3>
      <input type="text" value="{{ form.first_name }}" name="customer[first_name]" id="first_name" size="30" class="background-lightgray">
      <h3 class="text-green"><label for="last_name">Last Name</label></h3>
      <input type="text" value="{{ form.last_name }}" name="customer[last_name]" id="last_name"{% if form.errors contains 'last_name' %} class="error"{% endif %} size="30" class="background-lightgray">
      <h3 class="text-green"><label for="email">Email Address</label></h3>
      <input type="email" value="{{ form.email }}" name="customer[email]" id="email"{% if form.errors contains 'email' %} class="error"{% endif %} size="30" class="background-lightgray">
       <h3 class="text-green"><label for="password">Password</label></h3>
      <input type="password" value="" name="customer[password]" id="password"{% if form.errors contains 'password' %} class="error"{% endif %} size="30" class="background-lightgray">
      <input type="submit" value="Create">
    {% endform %}
  </section>
  {% endif %}
</main>

<main id="product" itemscope itemtype="http://schema.org/Product">
  <meta itemprop="name" content="{{ product.title }}">
  <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
  <meta itemprop="image" content="{{ product.featured_image.src | product_img_url: 'grande' }}">
   
<section class="flex-container double-padding">
    <div class="half accent-padding">
      <div class="flex-container-no jcc">
        <div class="left-arrow"><p class="large">⌃</p></div>
        <div>
          <img src="{{ featured_image.src | img_url: '2000x2000' }}" alt="{{ image.alt | escape }}" class="fw">
          {% if product.images.size > 1 %}
            {% for image in product.images %}
              <div class="circle"></div>
            {% endfor %}
          {% endif %}
        </div>
        <div class="right-arrow"><p class="large">⌃</p></div>
      </div>
      <p class="tac">{{ product.description }}</p>
    </div>
    <div class="half tac accent-padding">
      <h3>{{ product.title }}</h3>
  
  <!--  -->

<form action="/cart/add" method="post" id="product-form-{{ product.id }} t" class="checkout" itemprop="offers" itemscope itemtype="http://schema.org/Offer">
 
 
  
  {% if product.available and product.variants.size > 1 %}
    {% include 'swatch' with 'Color' %}
  {% endif %} 
  {% if product.available %}
    <meta itemprop="priceCurrency" content="{{ shop.currency }}">
    <link itemprop="availability" href="http://schema.org/InStock">
    
   <select name="id" id="productSelect-{{ product.id }}" class="product-single__variants" style="display: none;">
      {% for variant in product.variants %}
        <option data-sku="{{ variant.sku }}" value="{{ variant.id }}">{{ variant.title }} - {{ variant.price | money_with_currency }}</option>
      {% endfor %}
   </select>
   <select name="quantity" id="quantity">
     {% for i in (1..10) %}
     <option value="{{ i }}">{{ i }}</option>
     {% endfor %}         
  </select>  
  {% if product.title == "Gift Cards" %}
    <div class="spacer"></div>
  {% else %}
    <p class="subscript clickable" id="size-chart"><img src="{{'ruler.png' | asset_url}}" class="ruler-icon"/>sizing chart</p>
  {% endif %}
  <p class="priceu subscript" id="discount-at-checkout" style="display: none;"><span>*discount applied at checkout</span></p>
  <button type="submit" name="add" id="add-to-cart-{{ product.id }} add-cart" class="background-green text-white"><span>add to cart</span></button>
  {% endif %}
</form>
</div>
</section>


    <main id="page" class="contact-us">	     
	    <section class="background-green tac text-white page-header">
          <h1>{{ page.title }}</h1>
      	</section>
      	<section class="flex-container index-padding">
        <div class="half">
          <div class="title-border"></div>
          <h2>Our customer service<br> goal is simple:</h2>
          <p>We are committed to responding to your inquiries in a timely fashion and providing a positive customer service experience.</p>
          <p>Questions, comments or suggestions, we would be delighted to hear from you!</p>
          <h3 class="text-green">drop us a note: <br> <a href="mailto:gosockless@mygekks.com" class="text-green">gosockless@mygekks.com</a></h3>
        </div>
        <div class="half">
          {% form 'contact' %}
          {% if form.posted_successfully? %}
          <p class="subscript">Thank you for contacting us! We will get back to you as soon as possible.</p>
          {% endif %}
          {% if form.errors %}
          <p class="subscript errors">Not all fields have been filled correctly</p>
          {% endif %}
          <p>
            <label for="contact_form_name"><h3 class="text-green">name</h3></label>
            <input type="text" id="contact_form_name" class="contact_input" name="contact[name]" value="{{ form.name }}" />
          </p>
          <p>
            <label for="contact_form_email"><h3 class="text-green">email</h3></label>
            <input type="text" id="contact_form_email" class="contact_input" name="contact[email]" value="{{ form.email }}"/>
          </p>
          <p>
            <label for="contact_form_subject"><h3 class="text-green">subject</h3></label>
            <input type="text" id="contact_form_subject" class="contact_input" name="contact[subject]" value="{{ form.subject }}"/>
          </p>
          <p>
            <label for="contact_message"><h3 class="text-green">message</h3></label>
            <textarea id="contact_message" name="contact[body]" rows="5">{{ form.body }}</textarea>
          </p>
          <div class="tar">
          	<input type="submit" value="Send Email">
          </div>
          {% endform %}
        </div>
      </section>
    </main>
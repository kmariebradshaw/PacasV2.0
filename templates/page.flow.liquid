<script>
  $('.continue').click(function() {
    $(this).closest('section').hide().next('section').fadeIn();
  })
  $('.back').click(function() {
    if ($('#dye').is(":visible")) {
      $('#dye').hide(); 
      $('#color-style').removeClass('secondary-background')
      $('#choose').fadeIn()
    }
    else { 
    $(this).closest('section').hide().prev('section').fadeIn(); 
  }
  })
</script>
<script>
$(document).ready(function() {
  setInterval(function() {
    $('.jiggle').toggleClass('rotate')
  }, 500)
})
$( "#shaver, #shave-text" ).click(function() {
  $("#shaver").removeClass('jiggle')
  $('#shave-me').addClass('slide2')
  $('.flow-button.slide2').addClass('post-shave')
  $('.slide1').hide();
  $('.slide2.large').fadeIn();
  $( "#shaver" ).animate({
    top: "-=200",
    left: "-=70px",
  }, 1000, function() {
    $(this).css('-webkit-transform','rotate(0deg)'); 
    $( "#shaver" ).animate({
      top: "+=100",
    }, 1000, function() {
      fluffIn('#fluff1');
      $('#clothed-paca').attr("src", "{{'naked-paca1.png' | asset_url }}");
      edFluffIn('#ed-fluff1')
      $( "#shaver" ).animate({
        left: "+=70px",
        top: "-=130",
      }, 500, function() {
        $( "#shaver" ).animate({
          top: "+=120",
        }, 1100, function() {
          $('#clothed-paca').attr("src", "{{'naked-paca2.png' | asset_url }}");
          edFluffIn2('#ed-fluff2')
          $('#shaver').animate({
            left: "+=60px",
            top: "-=150px",
          }, 600, function() {
            $('#shaver').animate({
              top: "+=150px",
            }, 1000, function() {

                  $('#clothed-paca').attr("src", "{{'naked-paca.png' | asset_url }}");
                  edFluffIn3('#ed-fluff3')
                  fluffIn('#fluff2')
                  $('#shaver').hide();
                  $('.flow-button.slide2').removeClass('vis-hid').hide().fadeIn();
                })
              })
            });
           });
        });
      });
    });

fluffIn = function(fluff) {
  $(fluff).show().animate({
    top: "+=80",
  }, 800)
}
edFluffIn = function(fluff) {
  $(fluff).show().animate({
    top: "+=157",
  }, 800)
}
edFluffIn2 = function(fluff) {
  $(fluff).show().animate({
    top: "+=280",
  }, 1100)
}
edFluffIn3 = function(fluff) {
  $(fluff).show().animate({
    top: "+=170",
  }, 800) 
}

$('.color-dye').click(function() {
  $('#color-style').addClass('secondary-background')
  $('#slide-prog').addClass('filled')
  var color = $(this).attr("id")
  var url = "url('//cdn.shopify.com/s/files/1/0117/0597/4884/t/2/assets/" + color + ".gif?13305863534868877902'"
  $('#choose').hide(); 
  $('#dye').fadeIn().css("background-image", url)
})

</script>

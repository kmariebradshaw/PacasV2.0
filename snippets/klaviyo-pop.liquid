      </div>
   </form>
    </div>
   <p class='nm klaviyo_header_close tar clickable accent-padding' id="success-close" style="display: none;">✕</p>
    <div class="success_message"></div>
    <img src="{{'pop-paca.png' | asset_url}}" />
  </div>
</div> 
 
<script>
$(document).ready(function(){ 
  // var flowFinish = readCookie('flowFinish')
  // var pacasVisit = readCookie('pacasVisit')
  var newsletterModal = readCookie('newsletterModal')
  // if ((flowFinish) && (gekksVisit) && !(newsletterModal) && $('.mobile-nav1:visible').length == 0){
  if (!(newsletterModal) && $('.mobile-nav1:visible').length == 0){
    setTimeout(function(){
      $('.modal').removeClass('darken')
      if ($('.modal:visible').length == 0) {
        KlaviyoSubscribe.attachToModalForm('#newsletter_popup2', {
          delay_seconds: 0,
          ignore_cookie: true,
          success_message: "<div class='success_feedback accent-padding'><div class='accent-padding border-white'><h2 class='accent'>Thank you!</h2><p class='tac'>Check your inbox for your coupon code!</p></div></div>",
     success: function ($form) {
          createCookie("emailSignUp", "popup", 14)

      $('#success-close').show();
      ga('send', 'event', 'Acquisition', 'Pop Up', 'Website');
      $form.find('.hide_on_submit').hide();
    },
  }); 
  };
    createCookie("newsletterModal", "Displayed", 5)
    $('.index-sections, main, header, footer, #banner-cta, .mobile-nav1').addClass('darken')
    $('body').addClass('freeze-frame')
   }, 3000); 
  }
}); 
</script>

